@page
@model FinanceApp.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fund</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Fund.IdFunds" />
            <div class="form-group">
                <label asp-for="Fund.Cash" class="control-label"></label>
                <input asp-for="Fund.Cash" class="form-control" />
                <span asp-validation-for="Fund.Cash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fund.Checking" class="control-label"></label>
                <input asp-for="Fund.Checking" class="form-control" />
                <span asp-validation-for="Fund.Checking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fund.Savings" class="control-label"></label>
                <input asp-for="Fund.Savings" class="form-control" />
                <span asp-validation-for="Fund.Savings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fund.Credit" class="control-label"></label>
                <input asp-for="Fund.Credit" class="form-control" />
                <span asp-validation-for="Fund.Credit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
